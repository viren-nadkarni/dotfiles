set nocompatible
set pastetoggle=<F12>

let mapleader=','

set whichwrap+=<,>,[,]
set autochdir
set magic
set incsearch
set ignorecase
set smartcase

set scrolloff=4
set wrap
set cmdheight=2
set lazyredraw
set number

set background=dark
set hlsearch
syntax on
set colorcolumn=80
filetype plugin indent on

set hidden
set splitright
set splitbelow
set laststatus=2
set statusline=%<%f
set statusline+=\ %w%h%m%r
set statusline+=\ [%{&ff}/%Y]
set statusline+=\ [%{getcwd()}]
set statusline+=%=%-14.(%l,%c%V%)\ %p%%

set showcmd
set noshowmode
set ruler
set rulerformat=%30(%=\:b%n%y%m%r%w\ %l,%c%V\ %P%)
set noerrorbells
set novisualbell

set undolevels=1000
set backspace=indent,eol,start
set showmatch
set nojoinspaces

set tabstop=4
set shiftwidth=4
set smarttab
set softtabstop=4
set expandtab
set autoindent

set timeoutlen=1000
set ttimeoutlen=50

set fileformat=unix
set fileformats=unix,dos
set nowritebackup
set nobackup
set autoread

set swapfile

set history=1000
set wildmode=list:longest,full
set wildignore=*.swp,*~
set wildignore+=*.o,*.pyc,*.so,*.dll,*.exe,*.zip,*.lnk,*.dat,*.db,*.ini
set wildmenu

set encoding=utf8

if $TERM=='xterm-256color' || $TERM=='screen-256color' || $COLORTERM=='gnome-terminal'
  set t_Co=256
endif

map W w
map j gj
map k gk
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

:nnoremap n nzz
:nnoremap N Nzz
:nnoremap * *zz
:nnoremap # #zz

:command WQ wq
:command Wq wq
:command W w
:command Q q
