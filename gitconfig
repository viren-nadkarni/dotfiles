[alias]
    a = add
    aa = add --all
    bl = blame
    br = branch
    bra = branch --all
    ci = commit --verbose
    cia = commit --verbose --amend
    cl = clone --recursive
    co = checkout
    cof = checkout --
    cp = cherry-pick
    d = diff
    dc = diff --cached
    dh = diff HEAD
    g = grep
    lg = log --oneline --graph --abbrev-commit --max-count 25 --decorate
    mg = merge
    ph = "!git push -u origin $(git rev-parse --abbrev-ref HEAD)"
    pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
    pt = push --tags origin
    ptd = "!sh -c 'git push origin :refs/tags/$1' -"
    rt = reset
    rm = rm
    rs = restore --staged
    s = show
    sh = stash
    shd = stash drop
    shl = stash list
    shp = stash pop
    shs = stash show --patch
    st = status --short --branch
    t = tag
    td = tag -d

[color]
    ui = true

[core]
    editor = vim
    excludesFile = ~/.gitignore_global
    pager = delta

[delta]
    line-numbers = true
    syntax-theme = 1337

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[fetch]
    prune = true

[user]
    name = Viren Nadkarni
    email = viren.nadkarni@gmail.com

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[rebase]
    autoStash = true
