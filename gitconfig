[alias]
    a = add
    aa = add --all
    bl = blame
    br = branch
    bra = branch --all
    ci = commit
    cia = commit --amend
    cl = clone --recursive
    cp = cherry-pick
    d = diff
    dc = diff --cached
    dh = diff HEAD
    f = fetch
    g = grep
    lg = log --oneline --graph --abbrev-commit --max-count 25 --decorate
    mg = merge
    ph = push
    phf = "!git ph --force-with-lease"
    pl = pull
    pt = push --tags origin
    ptd = "!sh -c 'git push origin :refs/tags/$1' -"
    rb = rebase
    rmt = remote
    rt = reset
    re = restore
    res = restore --staged
    sh = stash push
    shd = stash drop
    shl = stash list
    shp = stash pop
    shs = stash show --patch
    st = status --short --branch
    sw = switch
    swc = switch --create
    s = show
    t = tag
    td = tag -d

[branch]
    sort = -committerdate

[column]
    ui = auto

[color]
    ui = true

[commit]
    verbose = true

[core]
    editor = vim
    excludesFile = ~/.gitignore_global

[delta]
    line-numbers = true
    syntax-theme = 1337

[diff]
    algorithm = histogram
    colorMoved = default
    mnemonicPrefix = true
    renames = true
    tool = vimdiff

[fetch]
    prune = true
    pruneTags = true
    all = true

[help]
    autocorrect = prompt

[init]
    defaultBranch = master

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = zdiff3
    tool = vimdiff

[pull]
    ff = only
    autoSetupRemote = true

[push]
    autoSetupRemote = true
    default = simple

[rebase]
    autoStash = true
    autoSquash = true
    updateRefs = true

[tag]
    sort = version:refname

